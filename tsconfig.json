{
    "compilerOptions": {
        "target": "ES2015",
        "lib": [
            "ES2015",
            "DOM"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "requirejs"
        ],
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "removeComments": false,
        "declaration": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "old",
        "dist"
    ]
}