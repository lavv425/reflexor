{
    "compilerOptions": {
        "target": "ES2017",
        "module": "ESNext",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "outDir": "./dist", // Ensure all outputs go to ./dist
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "dist"]
}