{
    "compilerOptions": {
        "importHelpers": true,
        "target": "ES2017",
        "lib": [
            "ES2017",
            "DOM"
        ],
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "types": [
            "node",
            "requirejs"
        ],
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "declarationDir": "old/dist_old_ok",
        "outDir": "old/dist_old_ok",
        "removeComments": false,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
, "old/index_old_ok.ts"    ],
    "exclude": [
        "node_modules",
        "old",
        "old/dist_old_ok",
        "dist_cjs",
        "dist_esm",
        "dist_umd",
        "dist_cjs_min",
        "old/dist_old",
        "**/*.spec.ts"
    ]
}